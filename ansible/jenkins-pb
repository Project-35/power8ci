- name: Install and configure Jenkins
  hosts: jenkins
  roles:
    - geerlingguy.jenkins
    - jenkins
  remote_user: ubuntu
  become: yes
  vars_files:
    - group_vars/jenkins

- name: Install and configure Docker
  hosts: docker
  roles:
    - docker
  remote_user: ubuntu
  become: yes
  vars_files:
    - group_vars/jenkins
